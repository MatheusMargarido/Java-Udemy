		Double baseDeSalario = sc.nextDouble();

		Trabalhador trabalhador = new Trabalhador(nomeTrabalhador, nivelTrabalhador.valueOf(nivelTrabalhador)), baseDeSalario, new Departamento(NomeDoDepartamento));

